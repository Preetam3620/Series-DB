<%- include('partials/header') %>

<p class="text-center h4 p-4">Enter the names of movies and/or tv series that you've seen.</p>


<div class="container-fluid text-center">
	<div class="row">
		<div class="col-md jumbotron">
			<i class="fas fa-tv fa-4x"></i>
			<h1 class="display-3">TV Series</h1>

			<form action="/submit/tv_series" method="POST">
				<div class="form-group container">
					<div class="row">
						<div class="col-11 p-0"><input type="text" class="form-control text-center" name="series_name"
								placeholder="Enter a TV Series"></div>
						<div class="col-1 p-0"><button type="submit" class="no-style"><i class="fas fa-plus fa-2x"
									style="color: #2a2e33;"></i></button></div>
					</div>
				</div>
			</form>

			<% if(seriesArray.length > 0){ %>
			<div class="table-responsive">
				<table class="table table-hover table-dark table-bordered">
					<thead class="thead-dark">
						<tr>
							<th scope="col">#</th>
							<th scope="col">Title</th>
							<th scope="col">Year</th>
							<th scope="col">Genre</th>
							<th scope="col">imdbRating</th>
							<th scope="col">totalSeasons</th>
						</tr>
					</thead>
					<tbody>

						<% seriesArray.forEach((row,index) => { %>
						<tr>
							<th scope="row"> <%= index+1 %> </th>
							<td> <%= row.Title %> </td>
							<td> <%= row.Year %> </td>
							<td> <%= row.Genre %> </td>
							<td> <%= row.imdbRating %> </td>
							<td> <%= row.totalSeasons %> </td>
						</tr>
						<% }); %>
					</tbody>
				</table>
			</div>
			<% } %>

		</div>
		<div class="col-md jumbotron">
			<i class="fas fa-video fa-4x"></i>
			<h1 class="display-3">Movies</h1>


			<form action="/submit/movie" method="POST">
				<div class="form-group container">
					<div class="row">
						<div class="col-11 p-0"><input type="text" class="form-control text-center" name="movie_name"
								placeholder="Enter a Movie"></div>
						<div class="col-1 p-0"><button type="submit" class="no-style"><i class="fas fa-plus fa-2x"
									style="color: #343a40;"></i></button></div>
					</div>
				</div>
			</form>

			<% if(moviesArray.length > 0){ %>
			<div class="table-responsive">
				<table class="table table-hover table-dark table-bordered">
					<thead class="thead-dark">
						<tr>
							<th scope="col">#</th>
							<th scope="col">Title</th>
							<th scope="col">Year</th>
							<th scope="col">Runtime</th>
							<th scope="col">Genre</th>
							<th scope="col">Director</th>
							<th scope="col">imdbRating</th>
						</tr>
					</thead>
					<tbody>

						<% moviesArray.forEach((row,index) => { %>
						<tr>
							<th scope="row"> <%= index+1 %> </th>
							<td> <%= row.Title %> </td>
							<td> <%= row.Year %> </td>
							<td> <%= row.Runtime %> </td>
							<td> <%= row.Genre %> </td>
							<td> <%= row.Director %> </td>
							<td> <%= row.imdbRating %> </td>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
			<% } %>

		</div>

	</div>
	<p class="text-right h5 p-4">As we know that there are thousands of movies out there. So just add your top movies.
	</p>
</div>

<%- include('partials/footer') %>