<%- include('partials/header') %>

<p class="h4 p-4">Enter the names of movies and/or tv series that you've seen below.</p>

<div class="container">
	<div class="row">
		<div class="col-md jumbotron">
			<i class="fas fa-tv fa-4x"></i>
			<h1 class="display-3">TV Series</h1>

			<form action="/submit/tv_series" method="POST">
				<div class="form-group container">
					<div class="row">
						<div class="col-11 p-0"><input type="text" class="form-control text-center" name="series_name"
								placeholder="Enter a TV Series"></div>
						<div class="col-1 p-0 d-flex"><button type="submit" class="no-style"><i
									class="fas fa-plus fa-2x" style="color: #2a2e33;"></i></button></div>
					</div>
				</div>
			</form>

			<% if(seriesArray.length > 0){ %>
			<div class="table-responsive">
				<table class="table table-hover table-dark table-bordered">
					<thead class="thead-dark">
						<tr>
							<th scope="col">#</th>
							<th scope="col">Title</th>
							<th scope="col">Year</th>
							<th scope="col">Genre</th>
							<th scope="col">imdbRating</th>
							<th scope="col">totalSeasons</th>
						</tr>
					</thead>
					<tbody>

						<% seriesArray.forEach((row,index) => { %>
						<tr>
							<th scope="row"> <%= index+1 %> </th>
							<td scope="row"> <%= row.Title %> </th>
							<td scope="row"> <%= row.Year %> </th>
							<td scope="row"> <%= row.Genre %> </th>
							<td scope="row"> <%= row.imdbRating %> </th>
							<td scope="row"> <%= row.totalSeasons %> </th>
						</tr>
						<% }) %>
					</tbody>
				</table>
			</div>
			<% } %>

		</div>
		<div class="col-md jumbotron">
			<i class="fas fa-video fa-4x"></i>
			<h1 class="display-3">Movies</h1>

			<form action="/submit/movie" method="POST">
				<div class="form-group container">
					<div class="row">
						<div class="col-11 p-0"><input type="text" class="form-control text-center" name="movie_name"
								placeholder="Enter a Movie"></div>
						<div class="col-1 p-0 d-flex"><button type="submit" class="no-style"><i
									class="fas fa-plus fa-2x" style="color: #343a40;"></i></button></div>
					</div>
				</div>
			</form>

